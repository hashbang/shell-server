{
  "variables": {
    "disk_size": "10000",
    "memory": "4G",
    "cpus": "2",
    "headless": "true",
    "iso_url": "https://cdimage.debian.org/debian-cd/9.4.0/amd64/iso-cd/debian-9.4.0-amd64-netinst.iso",
    "iso_checksum": "124d270006703f2111224dec3bf7a9d01450168be41d4834f88fdd035552b044",
    "version": "{{ env `VERSION`}}"
  },
  "builders": [
    {
      "name": "qemu",
      "type": "qemu",
      "format": "qcow2",
      "headless": "{{ user `headless` }}",
      "accelerator": "kvm",
      "disk_interface": "virtio-scsi",
      "disk_size": "{{ user `disk_size` }}",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha256",
      "http_directory": "packer/http",
      "ssh_username": "root",
      "ssh_password": "shell",
      "shutdown_command": "shutdown -h now",
      "ssh_wait_timeout": "120m",
      "boot_wait": "2s",
      "boot_command": [
        "<esc><wait><wait>",
        "install ",
        "auto=true ",
        "priority=critical ",
        "interface=auto ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "<enter>"
      ],
      "qemuargs": [
        [ "-m", "{{ user `memory` }}" ],
        [ "-smp", "cpus={{ user `cpus`}}"]
      ],
      "output_directory": ".packer/build/qemu/"
    },
    {
      "name": "virtualbox",
      "type": "virtualbox-iso",
      "format": "ova",
      "headless": "{{ user `headless` }}",
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "Debian_64",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha256",
      "http_directory": "packer/http",
      "ssh_username": "root",
      "ssh_password": "shell",
      "shutdown_command": "shutdown -h now",
      "ssh_wait_timeout": "60m",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait><wait>",
        "install ",
        "auto=true ",
        "priority=critical ",
        "interface=auto ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "<enter>"
      ],
      "output_directory": ".packer/build/virtualbox/"
    },
    {
      "name": "docker",
      "type": "docker",
      "image": "debian:jessie",
      "changes": [
        "ENV container=docker",
        "VOLUME ['/sys/fs/cgroup','/run','/run/lock','/tmp']",
        "EXPOSE 20 80 443",
        "ENTRYPOINT /sbin/init"
      ],
      "export_path": ".packer/build/docker/docker.tar"
    }
  ],
  "provisioners": [
    {
        "type": "shell",
        "inline": ["apt install --yes python-apt"]
    },
    {
      "type": "ansible",
      "playbook_file": "ansible/main.yml"
    }
  ],
  "post-processors": [[
    {
      "type": "compress",
      "output": "dist/docker-{{ user `version` }}.tar.gz",
      "only": ["docker"]
    },
    {
      "type": "shell-local",
      "inline": [
        "ln -s docker-{{ user `version` }}.tar.gz dist/docker-latest.tar.gz"
      ],
      "only": ["docker"]
    },
    {
      "type": "shell-local",
      "inline": [
        "cp .packer/build/qemu/packer-qemu dist/qemu-{{ user `version` }}.qcow2",
        "ln -s qemu-{{ user `version` }}.qcow2 dist/qemu-latest.qcow2"
      ],
      "only": ["qemu"]
    },
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "dist/vagrant-{{ user `version` }}.box",
      "only": ["virtualbox"]
    },
    {
      "type": "shell-local",
      "inline": [
        "cp .packer/build/virtualbox/*.ova dist/virtualbox-{{ user `version` }}.ova",
        "ln -s virtualbox-{{ user `version` }}.ova dist/docker-latest.ova",
        "ln -s vagrant-{{ user `version` }}.box dist/vagrant-latest.box"
      ],
      "only": ["virtualbox"]
    }
  ]]
}
